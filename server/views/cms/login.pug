extends layout

block head
  style.
    body {
      background: url(../images/bg.jpg) no-repeat fixed center;
      /*background: #f0f0f0;*/ /*#DADADA*/
    }

    body > .grid {
      height: 100%;
    }

    .image {
      margin-top: -100px;
    }

    .column {
      max-width: 450px;
    }


block content
  .ui.middle.aligned.center.aligned.grid
    .column
      h2.ui.green.image.header
        //<img src="assets/images/logo.png" class="image">
        | Logga in på CMS
      .ui.attached.segment
        form.ui.large.form(method="POST" action="/auth")
          .field
            .ui.left.icon.input
              i.user.icon
              input(type="text" name="username" placeholder="Användarnamn")
          .field
            .ui.left.icon.input
              i.lock.icon
              input(type="password" name="password" placeholder="Lösenord")
          button.ui.fluid.large.green.button Logga in

      // Show error message if needed    
      if messages.error
        .ui.error.message
          .header Authentication Error
          p= messages.error 
      
